@using CapstoneProject.Components

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">CapstoneProject</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <!-- Visible for everyone -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <!-- Visible for everyone -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/shop">
                <span class="bi bi-cart-fill" aria-hidden="true"></span> Shop
            </NavLink>
        </div>

        <!-- Only visible for Employee -->
        <AuthorizeView Roles="employee">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/inventory">
                        <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Inventory
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/orders">
                        <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Orders
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/supplier">
                        <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Supplier
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/reports">
                        <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Reports
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/settings">
                        <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Settings
                    </NavLink>
                </div>
            </Authorized>
            <NotAuthorized>
                <!-- Optionally, you can show something for non-admin users here -->
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>
